<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <label>
    <input type="checkbox" name="tasks" <%= "checked" if (task.completed) %>>
    <%= link_to task.title, task_path(task.id) %>
  </label>
  <%= link_to "Delete",
    task_path(task.id),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the task #{task.title}?"} %>
  <br>
<% end %>

<p><%= link_to "add a new task", new_task_path%>
